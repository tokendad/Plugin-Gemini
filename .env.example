# Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# Timezone Configuration
# Example: America/New_York, Europe/London, Asia/Tokyo
TZ=UTC

# User and Group ID Configuration
# Set PUID and PGID to match your host user to avoid permission issues
# Run 'id' command on your host to find your user/group IDs
PUID=1000
PGID=1000

# Umask Configuration
# Controls default file permissions
# 022 = rwxr-xr-x (755 for directories, 644 for files)
# 002 = rwxrwxr-x (775 for directories, 664 for files)
UMASK=022

# Port Configuration
# The port on your host machine that will map to the container's port 80
HOST_PORT=8080
